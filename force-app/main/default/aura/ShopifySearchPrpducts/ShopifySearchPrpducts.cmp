<aura:component controller="ShopExcitingControllerClass">
    
    <aura:attribute name="products" type="List"/>
    <aura:attribute name="productVendor" type="String"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.initSearch}"/>
    
    <aura:method name="search" action="{!c.doSearch}"> 
        <aura:attribute name="productVendor" type="String"/> 
    </aura:method>
    
    <lightning:layout multipleRows="true">
        <aura:iteration items='{!v.products}' var='product'>
            <lightning:layoutItem size="12" mediumDeviceSize="3" padding="around-small">
              <c:ProductTile product="{!product}" />
          </lightning:layoutItem>
        </aura:iteration>
    </lightning:layout>
    
    <aura:if isTrue="{!v.products.length==0}">
      <lightning:layoutItem class="slds-align_absolute-center" flexibility="auto" padding="around-small">
        No products found
      </lightning:layoutItem>
    </aura:if>
    
</aura:component>