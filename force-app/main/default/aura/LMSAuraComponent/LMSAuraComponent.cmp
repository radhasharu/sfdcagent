<aura:component implements='flexipage:availableForAllPageTypes' access='global'>
    <lightning:messageChannel type='SampleMessageChannel__c' aura:id='SampleMessageChannel'
        onMessage='{!c.handleMessage}' scope='APPLICATION' />
    <aura:attribute type = 'String' name = 'messageReceived' default = 'No message Received yet'/>
    <aura:attribute type = 'String' name = 'enteredMessage' />

   

    <lightning:card title = 'Aura LMS Component'>
        {!v.messageReceived}
        <div class = 'slds-m-around_medium'>
          <lightning:input type=" text" label = 'Enter the message' value = '{!v.enteredMessage}'></lightning:input>
        </div>
        <div class = 'slds-m-around_medium'>
            <lightning:button  label = 'publish' onclick = '{!c.publishMessage}'></lightning:button>
          </div>

    </lightning:card>


</aura:component>